{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./bin",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@modules/*": ["./src/modules/*"],
      "@config/*": ["./src/config/*"],
      "@templates/*": ["./src/templates/*"],
      "@test/*": ["./src/test/*"],
      "@shared/*": ["./src/shared/*"]
    },
    "types": ["node"],
    "typeRoots": ["./src/types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./types"
  },
  "exclude": ["./bin/index.ts", "src/**/**.spec.ts"],
  "include": ["node_modules/@types", "src/**/**/types/*.ts", "src/index.ts"]
}
