{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictPropertyInitialization": false,
    "baseUrl": "./src",
    "allowJs": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@modules/*": ["modules/*"],
      "@config/*": ["config/*"],
      "@templates/*": ["templates/*"],
      "@test/*": ["test/*"]
    },
    "types": ["node"],
    "typeRoots": ["./src/types"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
